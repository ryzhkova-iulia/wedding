.gallery
  display flex
  justify-content space-between
  flex-wrap wrap

.gallery-item
  width 49%
  position relative
  margin-bottom 20px
  img
    width 100%
  &__info
    position absolute
    right 5%
    color #FFFFFF
    top 50%
    transform translate(0, -50%)
    &_align-left
      right inherit
      left 5%
    h2
      font-size 1.5rem
      font-weight normal
      text-align center
      text-transform uppercase
      span
        text-transform none
        font-size 0.7em
        display block
        margin-top 5px
  &__inner
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    background-color rgba(0, 0, 0, 0.39)

.btn
  color #FFFFFF
  font-size 0.8rem
  padding  0.8em 1.5em
  display inline-block
  border 1px solid
  font-weight bold
  cursor pointer
  text-transform uppercase

  &_filled
    background-color mainColor
    border 1px solid mainColor
    &:hover
      background-color darken(mainColor, 10%)
      transition all 0.3s

.block-btn
  margin-top 20px
  .btn
    &:first-child
      width 160px
      text-align center
    &:last-child
      margin-left 10px


.form
  width 100%
  max-width 900px
  margin auto
  border 1px dashed mainColor
  padding  30px 20px
  margin-top 50px
  text-align center
  position relative
  .btn
    vertical-align top
    padding 0.81em 1em
    width 32%

  form
    display flex
    justify-content space-between
    //align-items flex-start
  &__title
    position absolute
    max-width 430px
    top -13px
    left 0
    right  0
    margin auto
    text-transform uppercase
    font-size 1.5rem
    background-color #FFFFFF
    display inline-block
    font-weight bold

.input
  display inline-block
  width 32%
  position relative
  input
    width 100%
    height 36px
    padding-left 10px
.error
  &:after
    content "заполните поле"
    display block
    position absolute
    bottom  -15px
    left 0
    right 0
    margin auto
    font-size 0.8rem
    color red
    text-align center
  input
    border 1px solid red




.advantages
  padding 50px 0

.advantage
  margin-top 30px
  display flex
  justify-content space-around
  flex-wrap wrap

.advantage-item
  text-align center
  margin-bottom 20px
  flex-basis 33%
  &__title
    font-size 1rem
    font-weight bold
    text-align center
    line-height 1.3
    text-transform uppercase
  &__text
    width 100%
    max-width 300px
    margin auto
    color #808080
    font-size 0.9rem
    text-align center
    margin-top 15px
    line-height 1.2em
  img
    display inline-block

.advantage-item:hover .advantage-item__img
  transform rotateY(180deg)
  transition all 1s

.about
  width 100%
  background-color #f5f5f5
  display flex
  justify-content space-between
  flex-wrap wrap
  align-items center



.about-img
  width 50%
  img
    width 100%

.about-info
  width 50%
  text-align left
  padding 20px
  h3
    text-align left
  p
    color #808080
    font-size 0.9rem
    line-height 1.5em
    margin-top 15px
    strong
      color fontColor

.about-info_padding
  padding-left 5%

.list
  display flex
  flex-direction column
  //align-items center
  &__item
    display flex
    align-items center
  &__text
    font-weight bold
    text-transform uppercase
    span
      text-transform none
      font-weight normal
      color #808080
      display block
      font-size 0.8rem
      margin-top 5px
      line-height 1.2em
  &__num
    background-color mainColor
    color #FFFFFF
    font-size 2rem
    border-radius 50%
    padding 5px  12px
    margin-right 10px
  &__line
    height 20px
    width 1px
    border-left 1px dashed mainColor
    margin-left 21px

.ya-map
  display block
  height 350px
  margin-top 50px
.ymaps-2-1-53-map
  z-index 200
  -webkit-filter grayscale(100%)
  -ms-filter grayscale(100%)
  filter grayscale(100%)

.ymaps-2-1-53-image
  z-index 1000

.map-contact
  background-color #FFFFFF
  position absolute
  top 50%
  transform translate(0, -50%)
  z-index 500
  box-shadow 0px 10px 20px 0px rgba(0, 0, 0, 0.08)
  padding 30px 10px

.map-info
  display block
  font-weight bold
  font-size 0.9rem
  margin-top 15px
  span
    font-weight normal
    padding-left 10px




.gallery-group
  padding 15px 30px

.gallery-group__tabs
    overflow-x auto
    overflow-y hidden
.gallery-group__tabs-inner
  width 728px
  display flex
  justify-content space-between
  margin auto

.gallery-group__tab-item
    color #808080
    border-bottom 1px solid
    cursor: pointer
    text-align: center
    font-size 13px
    text-transform uppercase
    margin  20px 0

.active
  color mainColor
  border none




.block__subtitle
  font-size 17px
  color #9299a2
  display block
  margin-top 10px



.slide
  padding 20px
  margin-top 15px
  display flex
  justify-content space-between

.slide-item
  display inline-block
  width 100%
  max-width 370px
  margin 0 15px
  text-align center
  img
    display inline-block
    //width 100%
    max-width 376px

.slide
  .slick-prev, .slick-next
    width 21px
    height 38px
  .slick-next
    right: -10px;
  .slick-prev
    left -10px
  .slick-prev:before
    content: ''
    background url("../img/content/arrow-left.png") no-repeat center
    width 21px
    height 38px
    display block
  .slick-next:before
    content: ''
    background url("../img/content/arrow-right.png") no-repeat center
    width 21px
    height 38px
    display block


.disclaimer
  text-align center
  color #808080
  font-size 0.9rem
  padding 20px 0


.form-callback
  background-color #FFFFFF
  max-width 400px
  margin auto
  padding 30px
  position relative

#form_pop_callback
  display flex
  align-items center
  flex-direction column

.discl

  text-align center
  font-size 0.8rem
  line-height 1.2em
  margin-top 15px

  a
    color #3074b3
    text-decoration underline

.field-item
  width 100%
  margin-top 15px
  .btn
    width 100%

.subtitle
  text-align center
  margin-top 15px
  font-size 1.3rem

  nobr
    color mainColor
    font-weight bold

.service-title
  font-size 1.3rem
  font-weight bold
  text-transform uppercase
  margin-top 15px
  margin-bottom  15px

.service
  padding-left 20px

.service, .service li
  list-style-type disc
  color mainColor
  span
    color fontColor

.service li
  margin-top 5px
.form-info
  margin-top 15px
  line-height 1.5em

#popup-form_offer1.form-callback, #popup-form_offer2.form-callback,
#popup-form_offer3.form-callback, #popup-form_offer4.form-callback
  width 100%
  max-width 850px

.show_msg_form_pop_callback
  display none